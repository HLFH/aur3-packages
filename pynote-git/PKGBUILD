# Maintainer: Stefan Tatschner <stefan@sevenbyte.org>

pkgname=pynote-git
_pkgname=pynote
pkgver=0.1b3.r1.g40fb77a
pkgrel=1
pkgdesc="Manage notes on the commandline."
arch=('any')
url="http://redmine.sevenbyte.org/projects/pynote"
license=('MIT')
depends=('python' 'python-prettytable')
makedepends=('git')
conflicts=('pynote')
provides=('pynote')
source=("${_pkgname}-${pkgver}::git+git://sevenbyte.org/repositories/${_pkgname}.git#branch=develop")
md5sums=('SKIP')
install=pynote.install

pkgver() {
  cd "$srcdir/${_pkgname}-${pkgver}"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
  #printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  python setup.py install --prefix=/usr --root="${pkgdir}" -O1
}
