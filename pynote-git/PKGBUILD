# Maintainer: Stefan Tatschner <stefan@sevenbyte.org>

pkgname=pynote-git
_pkgname=pynote
pkgver=0.2.2.r54.gc531c24
pkgrel=1
pkgdesc="Manage notes on the commandline."
arch=('any')
url="https://github.com/rumpelsepp/pynote"
license=('MIT')
depends=('python' 'python-plaintable-git' 'python-pygments' 'python-babel')
makedepends=('git' 'python-setuptools')
conflicts=('pynote')
provides=('pynote')
source=("${_pkgname}::git+https://github.com/rumpelsepp/${_pkgname}.git")
md5sums=('SKIP')
install=pynote.install

pkgver() {
  cd "$srcdir/${_pkgname}"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
  #printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}/${_pkgname}"
  python setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
}

