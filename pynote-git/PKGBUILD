# Maintainer: Stefan Tatschner <stefan@sevenbyte.org>

pkgname=pynote-git
_pkgname=pynote
pkgver=0.1.r47.g7421625
pkgrel=1
pkgdesc="Manage notes on the commandline."
arch=('any')
url="http://redmine.sevenbyte.org/projects/pynote"
license=('MIT')
depends=('python' 'python-prettytable' 'python-pygments')
makedepends=('git')
conflicts=('pynote')
provides=('pynote')
source=("${_pkgname}::git+git://sevenbyte.org/repositories/${_pkgname}.git#branch=develop")
md5sums=('SKIP')
install=pynote.install

pkgver() {
  cd "$srcdir/${_pkgname}"
  git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
  #printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "${srcdir}/${_pkgname}"
  python setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
}

check() {
  cd "$srcdir/${_pkgname}"
  python tests.py
}
