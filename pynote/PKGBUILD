# Maintainer: Stefan Tatschner <stefan@sevenbyte.org>

pkgname=pynote
pkgver=0.2.2
pkgrel=2
pkgdesc="Manage notes on the commandline."
arch=('any')
url="http://redmine.sevenbyte.org/projects/pynote"
license=('MIT')
depends=('python' 'python-prettytable' 'python-pygments')
conflicts=('pynote-git')
provides=('pynote')
source=("https://pypi.python.org/packages/source/p/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('f1d44645f0622fa8b7d9e797e999c8e1')
install=pynote.install


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1
}

