# Maintainer: Andre Wayand <aur-awl@awayand.sleepmail.com>
pkgname=awl
pkgver=0.54
pkgrel=1
pkgdesc="Andrew's php Web Libraries"
arch=('any')
url="http://andrew.mcmillan.net.nz/projects/awl"
license=('GPL2')
depends=('php' 'make')
install="$pkgname.install"
source=("${pkgname}::https://gitlab.com/davical-project/awl/repository/archive.tar.gz?ref=r${pkgver}")
md5sums=('8c39da5f3a05b1421a3e169f4029671d')
sha1sums=('0955df6e947df7383dd7672d3c2dcb2efe22da06')

package() {
  cd "$srcdir/$pkgname.git"
  install -d "$pkgdir/usr/share/awl"
  cp -a . $pkgdir/usr/share/awl
}

